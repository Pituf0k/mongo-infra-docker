FROM registry.access.redhat.com/ubi8/ubi-init

COPY mongodb-enterprise.aarch64.rpm /root/mongodb-enterprise.aarch64.rpm
COPY mongodb-mms.x86_64.rpm /root/mongodb-mms.x86_64.rpm
COPY jdk.aarch64.tar.gz /opt/mongodb/mms/jdk.aarch64.tar.gz

# Install MongoDB and Ops Manager
RUN dnf -y install openssh-server iputils hostname cyrus-sasl cyrus-sasl-gssapi cyrus-sasl-plain krb5-libs libcurl lm_sensors-libs net-snmp net-snmp-agent-libs openldap openssl xz-libs && \
    dnf -y install net-tools && \
    dnf clean all && \
    rpm -U /root/mongodb-enterprise.aarch64.rpm && \
    rpm -U /root/mongodb-mms.x86_64.rpm --ignorearch && \
    mv /opt/mongodb/mms/jdk /opt/mongodb/mms/jdk.old && \
    mv /opt/mongodb/mms/jdk.aarch64.tar.gz /opt/mongodb/mms/jdk.tar.gz && \
    cd /opt/mongodb/mms/  && \
    tar -xzf jdk.tar.gz  && \
    mv jdk-17.0.10+7 jdk && \
    systemctl enable mongod && \
    systemctl enable mongodb-mms && \
    systemctl enable sshd && \
    mkdir -p /head && \
    chown mongodb-mms:mongodb-mms /head

EXPOSE 8080
EXPOSE 8443
EXPOSE 27999

STOPSIGNAL SIGRTMIN+3

CMD [ "/sbin/init" ]
